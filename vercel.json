{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["hnd1"],
  "crons": [
    {
      "path": "/api/payslips/recalculate",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/recalculate-sales",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/twitter-posts",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/generate-recurring-posts",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/cron/refresh-base-tokens",
      "schedule": "0 */12 * * *"
    },
    {
      "path": "/api/cron/sync-base-orders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/wage-status/auto-update",
      "schedule": "0 3 * * *"
    }
  ]
}
